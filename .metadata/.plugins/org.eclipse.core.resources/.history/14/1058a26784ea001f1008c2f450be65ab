<script type = "text/javascript">
   $(function (){
	   
	   $("input").keydown(function(){
			  $("h1").text("키보드를 누른 순간"); 
		return false;   
	   });
   
   
   });
   
   
   
   //input에서 keyboard를 누르면 => 누른순간에
  

</script>
