 .t2{font-size : 30pt;}
 #t{background-color:pink; color : lightblue;}
 div {border : pink solid 3px; width : 300px; height : 300px;}

</style>
<script type = "text/javascript" src = "jQuery.js"></script>
<script type = "text/javascript">
$(function(){
	
	$("#b1").click(function()
			{
		alert('asdf');
		$("a").text("유튜브로");
		
		//text()의 소괄호 안에 값을 넣지 않으면
		//기존의 값을 가져오게 됨
		
		let t = $("a").text();
		
			});
			
		
		//$("a").html("<b>유튜브로</b>");
//		$("a").text("<b>유튜브로</b>");
//        <b>를 텍스트로 인식!
		
		//.html() 사용하면 새로운 html요소로 변경할 수 있음
		





	$("#b2").click(function(){
	

          $("a").attr("href", "https://www.youtube.com");
		 
          
          // 이 a태그에 css를 주고 싶은데 a태그가 많다면
          // id도 부여할  수 있음
          $("a").attr("id", "t");
          
          // 속성 지우기
          $("a").removeAttr("class");
	
	
	
	});

     $("#b3").click(function()
    {
    	
    	 //$("css선택자") : 있는 것을 선택
    	 // $("DOM객체") :  DOM 객체 생성
    	 //marquee DOM객체 추가하기
    	 
    	 let m = $("<marquee></marquee>").text("발렌타인데이 !");
    	 
    	 // behavior : 스크롤 방식 설정
    	 //    scroll : 한쪽 방향으로만 진행 (기본값)
    	 //    alternate : 왕복
    	 m.attr("behavior", "alternate");
    	 
    	 
    	 
    	 
    	 
    }		 
     
     
     )










});




</script>
</head>
