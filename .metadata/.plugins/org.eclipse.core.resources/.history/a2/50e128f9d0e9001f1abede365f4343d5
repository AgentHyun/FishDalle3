<script type = "text/javascript" src = "jQuery.js"></script>
<script type = "text/javascript">
$(function(){

	//setInterval : JavaScript의 반복 함수
	// 일정한 시간 간격으로 코드를 반복 실행
	//setTimeout : 정해진 시간 후에 코드가 한번 실행
	
	 setInterval(() => {
	  let x = Math.random() * 500;
	  let y = Math.random() * 500;
	  $("img").css("top", y + "px");
	  $("img").css("left", x + "px");
		 
	}, 1000);
	//1초마다 한 번 씩 반복
	
	let b = false;
	$("button").click(()=>{
		if(!b){
			// attr() : 속성을 가져오거나 추가하는 기능
			$("img").attr("src", "chocolate.png");
			
		} else{
			$("img").attr("src", "candy.png");
			
		}
		
		b = !b;
		
	});
	
	let tVisible = false;
	$("#tHandle").click(function(){
		if(!tVisible){
			
			$("#t").css("top", "5px");
		}else{
			$("#t").css("top", "-85px");
		}
		tVisible = !tVisible;
		
		
	});
	
	//mouseenter() : 그 영역에 마우스 커서 들어갔을 때 이벤트 발생
	//mouseleave() : 영역밖으로 마우스 커서 나가면 이벤트 발생
	$("#t2").mouseenter(()=>{
		#("#t2").css("opacity" , 1);
		
	});
	$("#t2").mouseleave(()=>{
		#("#t2").css("opacity" , 0);
		
	});
});


</script>


</head>
