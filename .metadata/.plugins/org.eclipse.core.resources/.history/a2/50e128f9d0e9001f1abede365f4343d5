text-align : center;

color : black;
background-color : beige;
}
#t2{
position : fixed;
right : 7px;
transition : all 0.5s ease-out;
opacity : 0; /* 투명도 조절 */
/* display : none; 아예 없애기(메뉴클릭 안됨 + 애니메이션 효과 발동 x) */
}
