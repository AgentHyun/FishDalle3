h1 {

color : red;
transition : all 0.5s ease-out;

}

</style>
<script type ="text/javascript" src ="jQuery.js"></script>
<script type ="text/javascript">
$(function(){
	// $("선택자").css("속성명", "값");
	$("#btn1").click(()=>{
		 
		$("h1").css("color", "teal");
		$("h1").css("background-color", "pink");
        let color = ("teal");
	 
	 
	 });

	//btn2를 누르면 현재 h1의 글자색을 alert 창에 출력
	
	$("#btn2").click(()=>{
		 
       alert($("h1").css("color"));
	 
	 });
	
	let iInput = $("#i");
	//btn3을 누르면 input에 입력한 값대로 h1의 글자크기가 바뀌도록
	$("#btn3").click(()=>{
		 
       $("h1").css("font-size", iInput.val() + "px");
	 
	 });
	//btn4를 누르면 input의 가로길이를 input에 값으로 출력

	$("#btn4").click(()=>{
		 
	       $("input").css("width", iInput.val());
		 
		 });
});



</script>


